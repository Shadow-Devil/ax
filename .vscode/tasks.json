{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run tarpaulin cargo tests",
            "isBackground": true,
            "type": "shell",
            "command": "cargo watch --why --clear --exec 'tarpaulin --out Lcov --skip-clean' --ignore lcov.info",
            // Run in background: https://stackoverflow.com/a/54017304
            "problemMatcher": [
                {
                    "pattern": [
                        {
                            "regexp": ".",
                            "file": 1,
                            "location": 2,
                            "message": 3
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": ".",
                        "endsPattern": ".",
                    }
                }
            ],
            "runOptions": {
                "runOn": "folderOpen"
            },
        }
    ]
}
